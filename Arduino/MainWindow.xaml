<Window x:Class="Arduino.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Arduino"
		xmlns:uc="clr-namespace:Arduino.UserControls"
        mc:Ignorable="d"
        Title="Main Window" Height="450" Width="800" Loaded="Window_Loaded" Unloaded="Window_Unloaded">
    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>

		<uc:Temperatures />
		<Button Content="Start" HorizontalAlignment="Left" Grid.Row="1" VerticalAlignment="Top" Width="81" Height="38" Command="{Binding TemperatureCommand}"/>

		<StackPanel xml:space="default" Grid.Row="1">
			<TextBlock>
            <Run Text="Task status:"/>
            <Run Text="{Binding TemperatureCommand.ExecutionTask.Status, Mode=OneWay}"/>           
			</TextBlock>
			<Button
            Content="Click me!"
            Command="{Binding TemperatureCommand}"/>			
		</StackPanel>
	</Grid>
</Window>
